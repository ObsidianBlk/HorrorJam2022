extends Node

# -------------------------------------------------------------------------
# Signals
# -------------------------------------------------------------------------
signal active()
signal inactive()

# -------------------------------------------------------------------------
# Export Variables
# -------------------------------------------------------------------------
export var active : bool = false		setget set_active


# -------------------------------------------------------------------------
# Setters / Getters
# -------------------------------------------------------------------------
func set_active(a : bool) -> void:
	active = a
	if active:
		emit_signal("active")
	else:
		emit_signal("inactive")

# -------------------------------------------------------------------------
# Private Methods
# -------------------------------------------------------------------------
func _IsNodeATrigger(node : Node) -> bool:
	if node:
		return node.has_signal("active") and node.has_signal("inactive") and node.has_method("is_active")
	return false

# -------------------------------------------------------------------------
# Public Methods
# -------------------------------------------------------------------------
func is_active() -> bool:
	return active

